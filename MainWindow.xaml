<Window x:Class="DummiesV2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DummiesV2"
        mc:Ignorable="d"
        Title="Tetris" Height="620" Width="450" 
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown">

    <!-- We set the Grid background to Black so the whole window is dark -->
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <!-- Column 0 for the game (auto-sizes to the canvas width) -->
            <ColumnDefinition Width="Auto"/>
            <!-- Column 1 for the info panel (takes remaining space) -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- The Canvas is now in Column 0 -->
        <Canvas x:Name="GameCanvas" Background="Black" Width="300" Height="600"
                Grid.Column="0" VerticalAlignment="Center"/>

        <!-- NEW: A StackPanel in Column 1 for our score display -->
        <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Top">
            <TextBlock Text="SCORE" 
                       Foreground="LightGray" 
                       FontSize="18" 
                       TextAlignment="Center" 
                       Margin="0,20,0,0"/>
            
            <TextBlock x:Name="ScoreText" 
                       Text="0" 
                       Foreground="White" 
                       FontSize="24" 
                       TextAlignment="Center" 
                       FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>